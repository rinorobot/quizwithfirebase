<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResetPasswordActivity">

    <TextView
            android:text="Te enviaremos un mensaje el email que escribas abajo. Luego da clic en el botón enviar."
            android:layout_width="358dp"
            android:layout_height="243dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="147dp"
            app:layout_constraintBottom_toTopOf="@+id/reset_password_email_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.363"/>


    <EditText
            android:layout_width="247dp"
            android:layout_height="125dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/reset_password_email"
            android:hint="Escribe tu correo aquí..."
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="319dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Enviar email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset_password_email_button"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="205dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
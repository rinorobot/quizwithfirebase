<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrincipalActivity">

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/principal_button_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="72dp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/submit" />

    <ImageView
            android:layout_width="148dp"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/principal_profile_image"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/principal_fullname"
            app:layout_constraintTop_toBottomOf="@+id/principal_profile_image"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="@+id/principal_profile_image"
            android:layout_marginTop="56dp" />

    <Button
            android:text="Mis reportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/principal_btn_misreportes"
            tools:layout_editor_absoluteX="145dp"
            app:layout_constraintTop_toBottomOf="@+id/button_settings"
            android:layout_marginTop="84dp" />

    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_settings"
            tools:layout_editor_absoluteX="160dp"
            app:layout_constraintTop_toBottomOf="@+id/principal_fullname"
            android:layout_marginTop="52dp" />

    <Button
            android:text="Enviar notificaciÃ³n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            tools:layout_editor_absoluteX="160dp"
            app:layout_constraintTop_toBottomOf="@+id/principal_btn_misreportes"
            android:layout_marginTop="76dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
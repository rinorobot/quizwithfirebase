<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrincipalActivity">

    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/principal_button_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="202dp" />

    <ImageView
            android:layout_width="148dp"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/principal_profile_image"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="176dp"
            app:layout_constraintBottom_toTopOf="@+id/submit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/principal_fullname"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principal_profile_image"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="403dp"
            app:layout_constraintEnd_toEndOf="@+id/principal_profile_image" />

    <Button
            android:text="Mis reportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/principal_btn_misreportes"
            app:layout_constraintStart_toStartOf="@+id/principal_fullname"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/principal_profile_image"
            android:layout_marginBottom="315dp" />

    <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principal_profile_image"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintEnd_toEndOf="@+id/principal_button_logout" />

    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/principal_profile_image"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="289dp"
            app:layout_constraintEnd_toEndOf="@+id/principal_button_logout" />
</androidx.constraintlayout.widget.ConstraintLayout>
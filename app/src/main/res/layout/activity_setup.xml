<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".SetupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:src="@android:drawable/sym_def_app_icon"
            android:id="@+id/setup_profile_image"/>


    <EditText
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:inputType="number"
            android:gravity="start|top"
            android:ems="10"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/ic_check"
            android:layout_margin="20dp"
            android:id="@+id/setup_cuenta"

            android:hint="Número de cuenta/número de trabajador"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:layout_margin="20dp"
            android:background="@drawable/inputs"
            android:id="@+id/setup_fullname"
            android:hint="Nombre completo"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:inputType="number"
            android:gravity="start|top"
            android:ems="10"
            android:layout_margin="20dp"
            android:hint="Teléfono celular"
            android:background="@drawable/inputs"
            android:id="@+id/setup_cellphone"/>

    <RadioGroup
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:id="@+id/ocupationSelected"


    >


        <RadioButton
                android:text="Estudiante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbEstudiante"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbDocente"
                android:layout_weight="1"/>
        <RadioButton
                android:text="Administrador de app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbAdmin"
                android:layout_weight="1"/>
    </RadioGroup>

    <EditText
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:inputType="textPassword"
            android:gravity="start|top"
            android:ems="10"
            android:layout_margin="20dp"
            android:hint="Contraseña de administrador"
            android:background="@drawable/inputs"
            android:id="@+id/setup_nip" android:visibility="gone"/>



    <Button
            android:text="Enviar información"
            android:layout_margin="20dp"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:id="@+id/setup_information_button" tools:text="Guardar datos"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/settings_profile_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            tools:src="@mipmap/ic_launcher_round" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_fullname"
            android:hint="Nombre completo"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/settings_profile_image" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_cuenta"
            android:hint="Número de cuenta"
            android:layout_below="@+id/settings_fullname"
            android:layout_marginTop="10dp"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_ocupation"
            android:hint="Ocupación"
            android:layout_below="@+id/settings_cuenta"
            android:layout_marginTop="10dp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_cellphone"
            android:hint="Celular"
            android:layout_below="@+id/settings_ocupation"
            android:layout_marginTop="10dp"
    />


    <Button
            android:id="@+id/update_account_settings_buttons"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/settings_cellphone"
            android:text="Actualizar datos"
            android:layout_marginTop="10dp"

    />



</RelativeLayout>
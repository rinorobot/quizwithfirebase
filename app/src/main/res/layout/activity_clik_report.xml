<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ClikReportActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle del reporte"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
    />

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/click_report_image"
            android:layout_weight="1"/>
    <TextView
            android:text="Status: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/click_report_status"
            android:layout_weight="1"
            android:textSize="20sp"/>



    <TextView
            android:text="DescripciÃ³n del reporte"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/click_report_description"
            android:layout_weight="1"
            android:textSize="20sp"/>
    <TextView
            android:text="Lugar del reporte"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/click_report_ubication"
            android:layout_weight="1"
            android:textSize="20sp"/>
    <Button
            android:text="Editar reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_repot_button" android:layout_weight="1"/>
    <Button
            android:text="Eliminar reporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete_report_button" android:layout_weight="1"/>


</LinearLayout>